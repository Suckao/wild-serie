{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        <button class="btn btn-primary" type="submit">Ajouter une catégorie</button>
        {{ form_end(form) }}
    </div>
    <h1>Catégories existantes</h1>
    <div class="row col-3">
        <table class="table table-dark">
            <thead>
            <tr>
                <th>ID</th>
                <th>Catégorie</th>
            </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.name }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
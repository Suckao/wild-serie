{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form) }}
            {{ form_row(form.title) }}
            <button class="btn btn-primary" type="submit" name="btnSearch">Rechercher</button>
        {{ form_end(form) }}
    </div>
    <div class="row">
        {% for program in programs %}
            <div class="card col-4" style="width: 18rem;">
                <a href="{{ path('wild_show_program', {'slug': program.slug}) }}">
                    <img src="{{ program.poster }}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <h5 class="card-title">{{ program.title }}</h5>
                    <p class="card-text">{{ program.summary }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="btn btn-primary" href="{{ path('app_index') }}">
        Retour Ã  l'accueil
    </a>
{% endblock %}

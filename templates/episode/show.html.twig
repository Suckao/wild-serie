{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>


    <h1>{{ comments | length }} commentaires :
        {% for comment in comments %}
        <h2>{{ comment.author.email }}</h2>
        <h4> rate: {{ comment.rate }}</h4>
        <p> {{ comment.comment }}</p>
        {% endfor %}

        {% if not app.user %}
            <h3> Connectez vous pour pouvoir laisser un commentaire !</h3>
        {% else %}
            {{ form_start(commentForm) }}
            {{ form_widget(commentForm) }}
            <button type="submit" class="btn btn-success">Commenter</button>
            {{ form_end(commentForm) }}
        {% endif %}

    <a href="{{ path('episode_index') }}">back to list</a>

    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
